<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/cardview"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="5dp"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/image_view_movie"
            android:layout_width="90dp"
            android:layout_height="130dp"
            android:adjustViewBounds="true"
            tools:src="@drawable/image" />

        <TextView
            android:id="@+id/tv_title_movie"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_toRightOf="@id/image_view_movie"
            android:ellipsize="end"
            android:maxLines="1"
            android:textColor="#000000"
            android:textSize="22dp"
            android:textStyle="bold"
            tools:text="Title Movie" />

        <TextView
            android:id="@+id/tv_date_movie"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_title_movie"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="3dp"
            android:layout_toRightOf="@id/image_view_movie"
            android:textSize="12dp"
            tools:text="12 December 2018" />

        <TextView
            android:id="@+id/tv_describsion_movie"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_date_movie"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="6dp"
            android:layout_toRightOf="@id/image_view_movie"
            android:ellipsize="end"
            android:maxLines="4"
            android:textSize="12dp"
            tools:text="@tools:sample/lorem/random" />

        <TextView
            android:id="@+id/tv_read_more"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:layout_marginBottom="5dp"
            android:layout_marginLeft="5dp"
            android:text="Read More..."
            android:textColor="#000000"
            android:textSize="12dp"
            android:textStyle="bold" />

    </RelativeLayout>

</android.support.v7.widget.CardView>